# =========================
# Render / Docker runtime
# =========================
# Port for Next.js (Render sets PORT automatically)
PORT=10000

# Internal port for Go backend inside the same container
BACKEND_PORT=8080

# Admin panel password (required)
ADMIN_PASSWORD=change_me

# =========================
# Telegram notifications (required for leads)
# =========================
# Create a bot via @BotFather and paste token here
TELEGRAM_BOT_TOKEN=

# Optional secret token for Telegram webhook -> backend verification.
# Must match the "secret_token" when you set the webhook.
TELEGRAM_WEBHOOK_SECRET_TOKEN=

# Optional: if you run frontend+backend separately (not used in unified Docker)
# NEXT_PUBLIC_API_BASE_URL=

# =========================
# Public contact data (shown on site)
# =========================
NEXT_PUBLIC_CONTACT_PHONE_DISPLAY=+7 (999) 111-22-33
NEXT_PUBLIC_CONTACT_PHONE_TEL=+79991112233

NEXT_PUBLIC_CONTACT_EMAIL=info@example.com
NEXT_PUBLIC_CONTACT_CITY=Москва и область
NEXT_PUBLIC_CONTACT_ADDRESS=Москва, ул. Примерная, д. 123

NEXT_PUBLIC_CONTACT_WORK_HOURS_WEEKDAYS=Пн–Пт: 10:00–19:00
NEXT_PUBLIC_CONTACT_WORK_HOURS_SATURDAY=Сб: 11:00–17:00
NEXT_PUBLIC_CONTACT_WORK_HOURS_SUNDAY=Вс: по предварительной записи

# Messengers (optional)
NEXT_PUBLIC_CONTACT_WHATSAPP_URL=
NEXT_PUBLIC_CONTACT_TELEGRAM_URL=

# Yandex map embed URL for iframe src (optional)
# Example format is generated by Yandex Maps "Share" -> "Embed"
NEXT_PUBLIC_YANDEX_MAP_EMBED_URL=
